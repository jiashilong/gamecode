package com.game.server.packet.account;

import org.jboss.netty.buffer.ChannelBuffer;
import org.jboss.netty.buffer.ChannelBuffers;

import com.game.server.packet.Response;

public class RegisterResponse extends Response {
	
	private String username;
	private String passwd;
	
	public RegisterResponse() {
		username = "";
		passwd = "";
	}
	
	public RegisterResponse(String username, String passwd) {
		this.username = username;
		this.passwd = passwd;
	}
	
	public String getUsername() {
		return username;
	}

	public void setUsername(String username) {
		this.username = username;
	}

	public String getPasswd() {
		return passwd;
	}

	public void setPasswd(String passwd) {
		this.passwd = passwd;
	}
	
	@Override
	public String toString() {
		return "RegisterResponse [id=" + getId()+ "username=" + username + ", passwd=" + passwd
				+ "]";
	}

	@Override
	public ChannelBuffer encode() {
		ChannelBuffer buf = ChannelBuffers.dynamicBuffer();
		int totalSize = 4 + 4 + 4 + username.getBytes().length + 4 + passwd.getBytes().length + 4; 
		buf.writeInt(totalSize);
		buf.writeInt(getId());
		buf.writeInt(username.getBytes().length);
		buf.writeBytes(username.getBytes());
		buf.writeInt(passwd.getBytes().length);
		buf.writeBytes(passwd.getBytes());
		buf.writeInt(getRet());
		return buf;
	}

}
